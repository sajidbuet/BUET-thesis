% Macro to abbreviate a full name into initials + last name
\newcommand{\NameToInitials}[1]{%
% Use xstring to split into words
\StrCount{#1}{ }[\NameParts] % count spaces = number of parts - 1
\IfEq{\NameParts}{0}{#1}{% if only one part, return as is
% Otherwise, loop over each word
\def\Initials{}%
\StrBefore[1]{#1}{ }[\FirstWord]% get first word
\StrBehind[1]{#1}{ }[\Remainder]% everything after first space
% Get initials of all but last word
\StrCut{\Remainder}{ }{\SecondWord}{\Rest}%
\edef\Initials{\expandafter\@gobble\FirstWord}% dummy
% Actually: take first letters of all but last
}%
}


% Simpler approach: assume 3-part name (First Middle Last)
\newcommand{\ThreePartName}[3]{#1 #2 #3}


% Example using xstring to handle arbitrary names
\newcommand{\AbbrevStudent}[1]{%
\StrBefore[1]{#1}{ }[\First]% first name
\StrBehind[1]{#1}{ }[\Rest]% remainder
\StrBefore[1]{\Rest}{ }[\Middle]% middle (if any)
\StrBehind[1]{\Rest}{ }[\Last]% last name
% If there is a middle, print FirstInitial MiddleInitial Last
% Else, just FirstInitial Last
\IfStrEq{\Middle}{\Rest}{% means only two parts
\StrChar{\First}{1}[\FInit]
\textbf{\FInit\ \Rest}%
}{% else three parts
\StrChar{\First}{1}[\FInit]
\StrChar{\Middle}{1}[\MInit]
\textbf{\FInit\MInit\ \Last}%
}%
}

